{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017", "esnext"],
    "module": "esnext",
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "include": [
    "./src/**/*", "./test/**/*",
    "src",
    "./declarations.d.ts",
    "webpack.config.js"
  ]
}
